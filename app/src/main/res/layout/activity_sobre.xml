<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/background_trainner3"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FormPokemonActivity">


        <TextView
            android:textSize="22sp"
            android:textColor="#FFEB3B"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/pokemon_solid"
            android:text="Sobre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSobre" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Jonathas Garcia - 338900"
            android:textColor="#FFF"
            app:layout_constraintStart_toStartOf="@+id/textViewSobre"
            app:layout_constraintTop_toBottomOf="@+id/textViewSobre" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Caroline Nascimento - 337401"
            android:textColor="#FFF"
            app:layout_constraintStart_toStartOf="@+id/textView1"
            app:layout_constraintTop_toBottomOf="@+id/textView1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Renato Brito - 337364"
            android:textColor="#FFF"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Victor Kiam - 337385"
            android:textColor="#FFF"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <View android:layout_width="0dp" android:layout_height="1dp"
            android:background="#FFEB3B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/view2" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginTop="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>